@using Zhinindas_Alchemy_Shop.EmailTemplates.ViewModels
@model PasswordResetViewModel

@{
    Layout = "_EmailLayoutText";
    ViewContext.ViewData["EmailTitle"] = "Dragonfly Password Reset Requested";
}

